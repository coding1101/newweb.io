generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  address String @unique
  isPro Boolean
  blogs Blog[]
  earnings Float
  totalEarnings Float
}

model Blog {
  id String @id @default(cuid())
  writer User @relation(fields: [writerAddress], references: [address])
  writerAddress String
  title String
  content String
  isBlogForPros Boolean
  tipsCollected String
}

model Transfer {
  id String @id @default(cuid())
  from String
  to String
  date DateTime
  value String
  link String 
}