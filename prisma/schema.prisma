generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  address String @unique
  isPro Boolean
  blogs Blog[]
}

model Blog {
  id String @id @default(cuid())
  writer User @relation(fields: [writerAddress], references: [address])
  writerAddress String
  title String
  content String
  isBlogForPros Boolean
}